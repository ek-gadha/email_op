{
  "subject_query": "rw@peterc.org",
  "rules": {
    "collection_rule": "all",
    "rules_array": [
      {
        "field": "from",
        "predicate": "contains",
        "value": "rw@peterc.org"
      },
      {
        "field": "subject",
        "predicate": "contains",
        "value": "Breaking the ice"
      },
      {
        "field": "date_received",
        "predicate": "less_than",
        "value": "100 days"
      }
    ]
  },
  "actions": [
    {
      "action_name": "mark_as_read"
    },
    {
      "action_name": "move_message",
      "to_mailbox": "SPAM"
    }
  ]
}
